<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:third="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/activity_dashboard_tabstrip"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        third:pstsIndicatorColor="?attr/colorAccent"
        third:pstsTextColorSelected="?attr/colorAccent"
        third:pstsShouldExpand="true"
        />

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_dashboard_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cardscore.fabianholtkoetter.de.cardscore.Activities.DashboardActivity" />
</LinearLayout>